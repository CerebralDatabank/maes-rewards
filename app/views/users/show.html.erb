<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Points</th>
      <th>Admin</th>
      <th>Created At</th>
      <th>Last Update</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.points %></td>
        <td><%= @user.is_admin ? "Yes" : "No" %></td>
        <td><%= @user.created_at %></td>
        <td><%= @user.updated_at %></td>
      </tr>
  </tbody>
</table>
