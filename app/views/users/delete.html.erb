
<% if session[:is_admin] %>
  <h1>Delete member account</h1>
  <%= link_to("Back to All Users", admin_dashboard_url, class: "primary_link")%>
<% else %>
  <h1>Delete your account</h1>
  <%= link_to("Go back to My Account", user_path(@user), class: "primary_link")%><br>
<%end%>


<%= form_for @user, method: :delete do |f| %>
  <p>Are you sure you want to permanently delete this account?</p>
  <p>Name: <%= @user.name %></p>
  <div class="form-buttons">
    <%= f.submit("Delete account") %>
  </div>
<% end %>
