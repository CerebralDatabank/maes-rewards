<% content_for :head do %>
  <link rel="stylesheet" href="/assets/application.css.scss">
<% end %>
<div class="navbar">
<nav>
  <% if device == "mobile" %>
    <h1>TESTING HERE</h1>
  <% end %>
  <ul>
    <li><%= link_to "Home", admin_dashboard_url, aria: {label: "Admin Home Tab"} %></li>
    <li><%= link_to "Rewards", rewards_path, aria: {label: "Reward Tab"}%></li>
    <li><%= link_to "Activities", activities_path, aria: {label: "Activity Tab"}%></li>
    <li><%= link_to "Assign Points", member_points_url, aria: {label: "Points Tab"}%></li>
    <li><%= link_to "History", history_path, aria: {label: "History Tab"} %></li>
    <li><%= link_to "Sign Out", destroy_admin_session_path, aria: {label: "Sign Out Button"} %></li>
