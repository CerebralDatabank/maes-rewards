<div class="activities show">
  <h1>Activity Details</h1>
  <%= link_to('Back to all Activities', activities_path, class: "primary_link") %>
  <br> <br> <br>
  <% if session[:is_admin] %>
    <div class="actions">
      <%= link_to('Edit', edit_activity_path(@activity), class: "primary_link") %>
      <%= link_to('Delete', delete_activity_path(@activity), class: "primary_link") %>
    </div>
  <% end %>

  <table>
    <tr>
      <th>Name</th>
      <td><%= @activity.name %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @activity.description %></td>
    </tr>
    <tr>
      <th>Default Points</th>
      <td><%= @activity.default_points %></td>
    </tr>
  </table>
</div>

<% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
    <%= message %>
  </div>
<% end %>
