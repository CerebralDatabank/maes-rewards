
<div class="activities index">
  <h2>Activities</h2>


  <%= link_to("Add New Activity", new_activity_path, class: "primary_link") %>
  <br> <br>
  <table class="listing" style="width: 100%;">
    <tr class="header">
      <th>Name</th>
      <th>Description</th>
      <th>Default Points</th>
      <th>Actions</th>
    </tr>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.description %></td>
        <td><%= activity.default_points %></td>
        <td class="actions">
          <%= link_to('Show', activity_path(activity), class: "primary_link") %>
          <% if session[:is_admin] %>
            <%= link_to('Edit', edit_activity_path(activity), class: "primary_link") %>
            <%= link_to('Delete', delete_activity_path(activity), class: "primary_link") %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
    <%= message %>
  </div>
<% end %>
