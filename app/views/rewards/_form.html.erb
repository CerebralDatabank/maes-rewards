<table summary="Rewards form fields">
  <tr>
    <th aria-label="Reward Name">Name</th>
    <td><%= r.text_field(:name) %></td>
  </tr>
  <tr>
    <th aria-label="Reward Points">Point value</th>
    <td><%= r.number_field(:point_value, step: 1) %></td>
  </tr>
  <tr>
    <th aria-label="Reward Dollar Price">Dollar price</th>
    <td><%= r.number_field(:dollar_price, step: 0.01) %></td>
  </tr>
  <tr>
    <th aria-label="Current Inventory">Current inventory</th>
    <td><%= r.number_field(:inventory, step: 1) %></td>
  </tr>
</table>
