<div class="rewards show">
  <h1><%= @reward.name %></h1>
  <br>
  <div class="actions">
     <%= link_to("Back to all Rewards", memrewards_path_url(@user), class: "primary_link", aria: {label: "Back to All Rewards Button"}) %>
    <%= link_to('Purchase', purchase_path_url(id: @reward, user_id: @user), class: "primary_link", aria: {label: "Purchase Reward Button"}) %>

  </div>
  <br>

  <table summary="Reward Detail View">
    <tr>
      <th aria-label="Reward Name">Name</th>
      <td><%= @reward.name %></td>
    </tr>
    <tr>
      <th aria-label="Reward Dollar Price">Dollar price</th>
      <td><%= @reward.dollar_price %></td>
    </tr>
    <tr>
      <th aria-label="Reward Points">Point price</th>
      <td><%= @reward.point_value %></td>
    </tr>
    <tr>
      <th aria-label="Reward Current Inventory">Current inventory</th>
      <td><%= @reward.inventory %></td>
    </tr>
    <tr>
      <th aria-label="Reward Created at">Created</th>
      <td><%= @reward.created_at %></td>
    </tr>
    <tr>
      <th aria-label="Reward Updated at">Updated</th>
      <td><%= @reward.updated_at %></td>
    </tr>
  </table>

</div>

<br />

  <% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
    <%= message %>
  </div>
    <% end %>
