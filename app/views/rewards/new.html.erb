<h1 aria-label="Create New Reward">Create New Reward</h1>
<%= link_to("Back to all Rewards", {controller: 'rewards', action: 'index'}, class: "primary_link", aria: {label: "Back to All Rewards Button"}) %><br />
<div class="rewards new">
  <h2>Create Reward</h2>

  <%= form_for(@reward) do |r| %>
    <% # url: tasks_path, method: 'post' %>

    <%= render(partial: 'form', locals: {r: r})%>

    <div class="form-buttons" aria-label="Create Reward Button">
      <%= r.submit("Create Reward") %>
    </div>

  <% end %>
</div>

<% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
    <%= message %>
  </div>
<% end %>
