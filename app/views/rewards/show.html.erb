<h1><%= @reward.name %></h1>
<div class="rewards show">
  <div class="actions">
    <br />
    <%= link_to("Back to all Rewards", rewards_path, class: "primary_link") %>
    <%= link_to('Edit', edit_reward_path(@reward), class: "primary_link") %>
    <%= link_to('Delete', delete_reward_path(@reward), class: "primary_link") %>

  </div>
  <br />
  <table summary="reward detail view">
    <tr>
      <th>Name</th>
      <td><%= @reward.name %></td>
    </tr>
    <tr>
      <th>Dollar price</th>
      <td><%= @reward.dollar_price %></td>
    </tr>
    <tr>
      <th>Point price</th>
      <td><%= @reward.point_value %></td>
    </tr>
    <tr>
      <th>Current inventory</th>
      <td><%= @reward.inventory %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @reward.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @reward.updated_at %></td>
    </tr>
  </table>

</div>

<br />

  <% flash.each do |type, message| %>
  <div class="flash flash-<%= type %>">
    <%= message %>
  </div>
    <% end %>
